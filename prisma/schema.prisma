// This is your Prisma schema file for Food Delivery System with MongoDB
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// User Management
model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  password      String
  name          String
  phone         String?
  role          UserRole  @default(CUSTOMER)
  avatar        String?
  isActive      Boolean   @default(true)

  // Push Notifications
  pushSubscription String? // JSON: web push subscription object

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  addresses     Address[]
  orders        Order[]
  reviews       Review[]
  notifications Notification[]

  // For restaurant owners
  restaurant    Restaurant?

  // For delivery drivers
  deliveries    Delivery[]
  driverProfile DriverProfile?

  // Chat messages
  sentMessages     ChatMessage[] @relation("MessageSender")
  receivedMessages ChatMessage[] @relation("MessageReceiver")

  // Favorites
  favorites     Favorite[]
}

enum UserRole {
  CUSTOMER
  RESTAURANT_OWNER
  DRIVER
  ADMIN
}

model Address {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  label       String   // "Home", "Work", etc.
  fullAddress String
  latitude    Float
  longitude   Float
  district    String?
  province    String?
  postalCode  String?
  isDefault   Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  orders      Order[]
}

// Restaurant Management
model Restaurant {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  ownerId         String    @unique @db.ObjectId
  owner           User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  name            String
  description     String?
  logo            String?
  coverImage      String?
  phone           String
  email           String?

  // Location
  address         String
  latitude        Float
  longitude       Float
  district        String?
  province        String?

  // Business Info
  rating          Float     @default(0)
  totalReviews    Int       @default(0)
  totalOrders     Int       @default(0)
  isOpen          Boolean   @default(true)
  isActive        Boolean   @default(true)

  // Operating Hours (JSON format)
  operatingHours  String?   // JSON: {monday: {open: "09:00", close: "22:00"}, ...}

  // Delivery Info
  deliveryFee     Float     @default(0)
  minimumOrder    Float     @default(0)
  estimatedTime   String?   // "30-45 mins"

  // Categories (comma-separated)
  categories      String?   // "Thai Food,Fast Food,Desserts"

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  menuItems       MenuItem[]
  orders          Order[]
  reviews         Review[]
  favorites       Favorite[]
}

// Menu Management
model MenuItem {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  restaurantId    String     @db.ObjectId
  restaurant      Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  name            String
  description     String?
  price           Float
  image           String?
  category        String     // "Main Dish", "Appetizer", "Dessert", "Drink"

  isAvailable     Boolean    @default(true)
  isPopular       Boolean    @default(false)

  // Nutrition info (optional)
  calories        Int?
  preparationTime String?    // "15-20 mins"

  // Options (JSON format for customizations)
  options         String?    // JSON: [{name: "Spicy Level", choices: ["Mild", "Medium", "Hot"]}]

  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  // Relations
  orderItems      OrderItem[]
}

// Order Management
model Order {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber     String      @unique

  customerId      String      @db.ObjectId
  customer        User?       @relation(fields: [customerId], references: [id])

  restaurantId    String      @db.ObjectId
  restaurant      Restaurant  @relation(fields: [restaurantId], references: [id])

  addressId       String      @db.ObjectId
  address         Address     @relation(fields: [addressId], references: [id])

  // Order Details
  status          OrderStatus @default(PENDING)
  subtotal        Float
  deliveryFee     Float
  discount        Float       @default(0)
  total           Float

  // Payment
  paymentMethod   PaymentMethod
  paymentStatus   PaymentStatus @default(PENDING)

  // Promotion
  promotionId     String?

  // Special Instructions
  notes           String?

  // Timestamps
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  acceptedAt      DateTime?
  preparingAt     DateTime?
  readyAt         DateTime?
  pickedUpAt      DateTime?
  deliveredAt     DateTime?
  cancelledAt     DateTime?

  // Relations
  items           OrderItem[]
  delivery        Delivery?
  review          Review?
  notifications   Notification[]
}

enum OrderStatus {
  PENDING          // รอร้านยืนยัน
  ACCEPTED         // ร้านรับออเดอร์
  PREPARING        // กำลังเตรียม
  READY            // พร้อมส่ง
  PICKED_UP        // คนส่งรับของแล้ว
  ON_THE_WAY       // กำลังส่ง
  DELIVERED        // ส่งแล้ว
  CANCELLED        // ยกเลิก
  REJECTED         // ร้านปฏิเสธ
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  DEBIT_CARD
  MOBILE_BANKING
  PROMPTPAY
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model OrderItem {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  orderId         String    @db.ObjectId
  order           Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)

  menuItemId      String    @db.ObjectId
  menuItem        MenuItem  @relation(fields: [menuItemId], references: [id])

  quantity        Int
  price           Float     // Price at time of order

  // Customizations (JSON format)
  customizations  String?   // JSON: {spicyLevel: "Hot", extras: ["Extra Sauce"]}

  notes           String?

  createdAt       DateTime  @default(now())
}

// Delivery Tracking
model Delivery {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  orderId         String         @unique @db.ObjectId
  order           Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)

  driverId        String?        @db.ObjectId
  driver          User?          @relation(fields: [driverId], references: [id])

  status          DeliveryStatus @default(FINDING_DRIVER)

  // Pickup Location (Restaurant)
  pickupLatitude  Float?
  pickupLongitude Float?

  // Delivery Location (Customer)
  deliveryLatitude  Float?
  deliveryLongitude Float?

  // Current Driver Location (real-time)
  currentLatitude   Float?
  currentLongitude  Float?

  // Timing
  estimatedTime     String?
  assignedAt        DateTime?
  pickedUpAt        DateTime?
  deliveredAt       DateTime?

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum DeliveryStatus {
  FINDING_DRIVER
  DRIVER_ASSIGNED
  DRIVER_ARRIVED
  PICKED_UP
  ON_THE_WAY
  DELIVERED
  FAILED
}

model DriverProfile {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @unique @db.ObjectId
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  vehicleType     String   // "Motorcycle", "Car", "Bicycle"
  vehiclePlate    String?

  // Status
  isOnline        Boolean  @default(false)
  isAvailable     Boolean  @default(true)

  // Stats
  rating          Float    @default(5.0)
  totalDeliveries Int      @default(0)
  totalEarnings   Float    @default(0)

  // Current Location (for real-time tracking)
  currentLatitude  Float?
  currentLongitude Float?
  lastLocationUpdate DateTime?

  // Documents
  licenseNumber   String?
  licenseExpiry   DateTime?

  // Emergency Contact
  emergencyContact String?
  emergencyPhone   String?

  // Address
  address         String?
  district        String?
  province        String?
  postalCode      String?

  // Bank Information
  bankName        String?
  bankAccount     String?
  bankAccountName String?

  // Verification Status
  isVerified      Boolean  @default(false)
  verifiedAt      DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Review & Rating System
model Review {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId

  orderId         String   @unique @db.ObjectId
  order           Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  customerId      String   @db.ObjectId
  customer        User     @relation(fields: [customerId], references: [id])

  restaurantId    String   @db.ObjectId
  restaurant      Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  // Ratings (1-5)
  foodRating      Int
  deliveryRating  Int
  overallRating   Int

  // Review
  comment         String?

  // Images
  images          String?  // JSON array of image URLs

  // Restaurant Response
  response        String?
  respondedAt     DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Notification System
model Notification {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  userId          String           @db.ObjectId
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  orderId         String?          @db.ObjectId
  order           Order?           @relation(fields: [orderId], references: [id], onDelete: Cascade)

  type            NotificationType
  title           String
  message         String

  isRead          Boolean          @default(false)

  // For push notifications
  isPushed        Boolean          @default(false)
  pushedAt        DateTime?

  createdAt       DateTime         @default(now())
}

enum NotificationType {
  ORDER_PLACED
  ORDER_ACCEPTED
  ORDER_PREPARING
  ORDER_READY
  ORDER_PICKED_UP
  ORDER_ON_THE_WAY
  ORDER_DELIVERED
  ORDER_CANCELLED
  PROMOTION
  SYSTEM
}

// Promotion System
model Promotion {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId

  code            String    @unique
  name            String
  description     String?

  type            PromotionType
  discountValue   Float     // Percentage or fixed amount

  minimumOrder    Float     @default(0)
  maxDiscount     Float?    // Max discount for percentage type

  usageLimit      Int?      // Total usage limit
  usageCount      Int       @default(0)

  isActive        Boolean   @default(true)

  startDate       DateTime
  endDate         DateTime

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

enum PromotionType {
  PERCENTAGE
  FIXED_AMOUNT
  FREE_DELIVERY
}

// Analytics & Statistics
model DailyStats {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  date            DateTime @unique

  totalOrders     Int      @default(0)
  totalRevenue    Float    @default(0)
  totalDeliveries Int      @default(0)

  newCustomers    Int      @default(0)
  activeDrivers   Int      @default(0)

  avgOrderValue   Float    @default(0)
  avgDeliveryTime Float    @default(0)

  createdAt       DateTime @default(now())
}

// Chat Messages
model ChatMessage {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId      String
  senderId     String   @db.ObjectId
  receiverId   String   @db.ObjectId
  message      String
  messageType  MessageType @default(TEXT)
  imageUrl     String?
  fileUrl      String?
  isRead       Boolean  @default(false)
  createdAt    DateTime @default(now())

  // Relations
  sender       User     @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver     User     @relation("MessageReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
}

enum MessageType {
  TEXT
  IMAGE
  FILE
}

// User Preferences
model UserPreferences {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique

  // Notification preferences
  orderUpdates      Boolean @default(true)
  promotions        Boolean @default(true)
  newRestaurants    Boolean @default(false)
  newsletter        Boolean @default(false)

  // App preferences
  darkMode          Boolean @default(false)
  language          String  @default("th")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Favorite Restaurants
model Favorite {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @db.ObjectId
  restaurantId String   @db.ObjectId
  createdAt    DateTime @default(now())

  // Relations
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([userId, restaurantId])
}
